---
import StackIcon from './StackIcon.astro'

import astroIcon from './iconsStack/astroicon.astro'
import bootstrapIcon from './iconsStack/bootstrap.astro'
import cssIcon from './iconsStack/css.astro'
import expressjsIcon from './iconsStack/expressjs.astro'
import flutterIcon from './iconsStack/flutter.astro'
import gitIcon from './iconsStack/git.astro'
import githubIcon from './iconsStack/github.astro'
import htmlIcon from './iconsStack/html.astro'
import jsIcon from './iconsStack/js.astro'
import nextjsIcon from './iconsStack/nextjs.astro'
import nodejsIcon from './iconsStack/nodejs.astro'
import reactIcon from './iconsStack/react.astro'
import tailwindIcon from './iconsStack/tailwind.astro'
import vitejsIcon from './iconsStack/vitejs.astro'
import vscodeIcon from './iconsStack/vscode.astro'
import vueIcon from './iconsStack/vue.astro'
import vuetifyIcon from './iconsStack/vuetify.astro'

